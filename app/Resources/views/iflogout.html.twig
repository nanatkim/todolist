{% if app.user != null %}
    <div class="col-md-2 col-md-offset-2">
        <div class="dropdown col-md-offset-6">
            <a class="dropbtn"><i id="social-user" class="fa fa-meh-o fa-1x social"></i></a>
            <div class="dropdown-content dropdown-menu">
                <button class="dropdown-item"><a href="/user/details/{{app.user.id}}">Profile</a></button>
                <button class="dropdown-item"><a href="/logout">Logout</a></button>
            </div>
        </div>
    </div>
{% elseif app.user == null %}
    <div class="col-md-3 col-md-offset-2">
        <ul class="nav navbar-nav nav-pills">
            <li>
                <a href="/login"><button class="btn btn-primary">Login</button></a>
            </li>
            <li>
                <a href="/register"><button class="btn btn-outline-success">Sign Up</button></a>
            </li>
        </ul>
    </div>
{% endif %}