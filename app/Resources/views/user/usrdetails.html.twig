{% extends 'base.html.twig' %} {% block body %}
<a class="btn btn-default" href="/user">Back</a>
<hr>
<div class="col-md-6">
    <h2 class="page-header">{{user.name}}</h2>  
    <ul class="list-group">
        <li class="list-group-item">Email:
            <a class="btn btn-primary pull-right" href="#">edit email</a>
        </li>
        <li class="list-group-item">{{user.email}}</li>
        <hr>
        <li class="list-group-item">
                <a class="btn btn-primary pull-right" href="#">edit password</a>
        </li>
        <hr>
        {% if (user.aboutme == null) and (app.user != null) and (app.user.id == user.id) %}
        <li class="list-group-item active">
            <a class="btn btn-primary" href="/description/{{user.id}}">Adicionar descrição</a>
        </li>
        {% elseif user.aboutme != null %}
        <li class="list-group-item">About Me: {{user.aboutme}}</li>
        {% endif %}
    </ul>
</div>
{% endblock %}