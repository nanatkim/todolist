{% extends 'base.html.twig' %} {% block body %}
    <div class="container-fluid">
        <a class="btn btn-default" href="/todo">Back</a>
        <hr>
        <h2 class="pag-header">{{ todo.name }}</h2>
        <hr>
        <div class="row">
            <div class="col-md-4">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Category: </strong>{{ todo.category }}</li>
                    <li class="list-group-item"><strong>Priority: </strong>{{ todo.priority }}</li>
                    <li class="list-group-item"><strong>Due Date: </strong>{{ todo.dueDate|date('F, d/Y - h:i a') }}
                    </li>
                </ul>
            </div>
            <div class="col-md-7">
                <div class="panel panel-default">
                    <div class="panel-heading">Description:</div>
                    <div class="panel-body">
                        {{ todo.description }}
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <a class="btn btn-default" href="/todo/edit/{{ todo.id }}">Edit</a>
            </div>
        </div>
    </div>
{% endblock %}